<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowingAboutUsActivity"
    android:background="@color/startButtonTextColor">

    <LinearLayout
        android:id="@+id/aboutUsActivityScreenLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/headerTextAndInfoLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/aboutUsHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="50sp"
                android:gravity="center"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/aboutUsInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App nghe nhạc xịn xò của sinh viên UIT =)))"
                android:textSize="30sp"
                android:background="@android:color/transparent"
                android:layout_below="@id/aboutUsHeaderText"
                android:gravity="center"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </LinearLayout>

</AbsoluteLayout>