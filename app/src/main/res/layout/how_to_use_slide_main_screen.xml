<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/how_to_use_screen_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/howToUseSlideIV"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/internet_connect_img"
            android:layout_marginStart="65dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_marginTop="340dp"
            android:id="@+id/howToUseSlideTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_detail"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pageNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="245dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/getStartedButton"
            android:layout_width="160dp"
            android:layout_height="50dp"
            app:buttonColor="#FF5252"
            app:buttonCornerRadius="20dp"
            app:buttonGradientEndColor="@color/colorAccent"
            app:buttonGradientStartColor="@android:color/holo_green_light"
            android:text="@string/get_started_button_text"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:gravity="center"
            android:layout_marginTop="360dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/slideScreenLeftArrow"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow"
            android:layout_marginTop="250dp"
            android:layout_marginStart="7dp"/>

        <ImageView
            android:id="@+id/slideScreenRightArrow"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/right_arrow"
            android:scaleType="fitXY"
            android:layout_marginTop="250dp"
            android:layout_marginStart="272dp"/>

    </RelativeLayout>

</AbsoluteLayout>